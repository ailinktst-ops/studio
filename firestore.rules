rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regras para a aplicação RankUp Counter
    // Filosofia: Leitura e Listagem pública para Telão/Overlay e Painel.
    // Escrita (Create, Update, Delete) apenas para usuários autenticados (incluindo anônimos).
    
    match /counters/{counterId} {
      // Permite leitura e listagem do documento principal e coleções para qualquer visitante
      allow read, get, list: if true;
      
      // Permite escrita apenas para usuários autenticados
      allow write, create, update, delete: if request.auth != null;
      
      // Regras específicas para a sub-coleção de memes (jokes)
      match /jokes/{jokeId} {
        allow read, get, list: if true;
        allow write, create, update, delete: if request.auth != null;
      }
    }
    
    // Fallback de segurança para garantir que o list funcione em wildcards
    match /{path=**} {
      allow read, get, list: if true;
      allow write: if request.auth != null;
    }
  }
}