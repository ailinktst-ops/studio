rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /counters/{counterId} {
      // Leitura pública para Overlay e visitantes
      allow read: if true;
      
      // Escrita permitida para qualquer usuário autenticado (incluindo anônimos)
      allow write: if request.auth != null;

      // Regras para sub-coleções (participantes, mensagens, memes/jokes)
      match /{allChildren=**} {
        allow read: if true;
        allow write: if request.auth != null;
      }
    }
  }
}