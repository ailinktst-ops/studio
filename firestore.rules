
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permissões Globais para RankUp Counter
    // Permite que qualquer pessoa veja o ranking e os memes (Leitura Pública)
    // Permite que apenas usuários autenticados (Anon/Admin) alterem dados
    // O uso de {document=**} garante que sub-coleções herdem as permissões corretamente
    
    match /{document=**} {
      allow read, get, list: if true;
      allow write, create, update, delete: if request.auth != null;
    }
  }
}
// Atualização forçada das regras para garantir propagação correta de permissões anônimas e payloads otimizados.
