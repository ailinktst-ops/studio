rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regra definitiva para RankUp Counter (Protótipo)
    // Permite que qualquer pessoa veja o ranking e os memes (Leitura Pública)
    // Permite que apenas usuários do app (Autenticados via Anon) alterem dados
    
    match /{document=**} {
      allow read, get, list: if true;
      allow write, create, update, delete: if request.auth != null;
    }
  }
}