rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permite leitura pública e escrita autenticada para toda a árvore de contadores
    // Isso garante que sub-coleções como 'jokes' possam ser listadas pelo telão e painel
    match /counters/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}