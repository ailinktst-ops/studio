rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permite leitura pública para todos os documentos e sub-coleções (Telão e Painel)
    // Permite escrita apenas para usuários autenticados (Anônimos ou Admin)
    match /{path=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}